<%- include("./head.ejs") %>
    <section id="featured-cars" class="featured-cars">
        <div class="container">
            <div class="section-header">
                
                
                
                
                
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
                <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
                
            </div><!--/.section-header-->
            <div class="featured-cars-content">

                <table id="example">
                    <thead>
                        <tr>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let row of companyDetails){ %>
                        <tr>
                            <td>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="whole-box">
                                            <div class="col-md-2">
                                                <div class="logo-div">
                                                    <img height="auto" width="80%" src="/uploads/logos/<%- row.logo %>" alt="logo">
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                    <div class="">
                                                        <span><a href="#"><%- row.companyname %></a></span>
                                                        <span class="grey-text">Location : <%- row.location %></span>
                                                        <p>Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non. </p>
                                                    </div>
                                                </div>
                                                <div class="col-md-2 mt-20">
                                                        <button data-toggle="modal" data-target="#myModal" class="btn gradient-color btn-secondary">Add Review</button>
                                                        <br>
                                                    <span class="text-small">Founded on : <%- row.foundedon %></span>        
                                                </div>
                                        </div>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>




                <div class="row">
                    <table id="example1">
                        <thead>
                            <tr>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let row of reviewslist){ %>
                            <tr>
                                <td>
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                            <div class="whole-box">
                                                <div class="col-md-8">
                                                        <div class="">
                                                            <span><a href="#"><%- row.fullname %></a></span>
                                                            <br>
                                                            <span class="grey-text"> <b>Subject : </b><%- row.subject %></span>
                                                            
                                                            <p><b> Review :</b><%- row.reviewtext %></p>
                                                            <p><b> Ratings :</b> <%- row.ratings %></p>
                                                            
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2 mt-20">
                                                        <span class="text-small">Review on : <%- row.info %></span>        
                                                        
                                                    </div>
                                                    
                                                
                                            </div>
                                        
                                    </div>
                                </td>
                                <hr>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                    















                    
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add Review</h4>
        </div>
        
        <form id="myForm" enctype="multipart/form-data" action="/addreviews/<%- company_id %>" method="post">
        <div class="modal-body">
            <div class="form-group">
              <label for="name">Full Name:</label>
              <input type="text" class="form-control" id="fullname" name="fullname" required>
            </div>
            <div class="form-group">
              <label for="email">Subject:</label>
              <input type="text" class="form-control" id="subject" name="subject" required>
            </div>
            <div class="form-group">
              <label for="message">Review Text:</label>
              <input type="text" class="form-control" id="reviewtext" name="reviewtext" required>
            </div>
            <div class="form-group">
                <label for="message">Ratings:</label>
                <input type="number" class="form-control" id="ratings" name="ratings" required>
              </div>

            </div>
            
            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" form="myForm" class="btn btn-primary">Submit</button>
            </div>
        </form>
      </div>
    </div>
  </div>
<!-- ----------------------------------------------------- -->

                    <style>
                        .featured-cars-content{
                            padding: 0
                        }
                    </style>
    </section><!--/.featured-cars-->
    <!--featured-cars end -->
